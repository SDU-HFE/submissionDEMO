<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.UserInfoActivity"
    android:orientation="vertical"
    android:background="#F1F1F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/basicColor">

        <Button
            android:id="@+id/button_userInfo_navigationBar_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/arrow_left"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/text_setting_navigation_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="个人信息"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/whiteForText" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_account_menu_cutoff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="个人主页"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/image_userInfo_list_homePage_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/right_gray" />

        <ImageView
            android:id="@+id/image_userInfo_list_homePage_ProfilePreview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/image_userInfo_list_homePage_arrow"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/user_filling"
            android:background="@drawable/profile_background_icon_without_margin"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/button_userInfo_list_userHomePage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"/>

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_account_menu_cutoff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="实名认证"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/text_userInfo_list_hasCertificated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/image_userInfo_list_certificate_arrow"
            android:layout_centerVertical="true"
            android:text="未认证"
            />

        <ImageView
            android:id="@+id/image_userInfo_list_certificate_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/right_gray" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/button_userInfo_list_certification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"/>

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_account_menu_cutoff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="绑定手机"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/text_userInfo_list_bindingPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/image_userInfo_list_bind_arrow"
            android:layout_centerVertical="true"
            android:text="123******01"
            />

        <ImageView
            android:id="@+id/image_userInfo_list_bind_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/right_gray" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/button_userInfo_list_bind"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"/>

        </FrameLayout>

    </RelativeLayout>



</LinearLayout>